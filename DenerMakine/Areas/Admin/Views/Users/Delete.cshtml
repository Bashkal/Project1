@model DenerMakine.Entities.User

@{
    ViewData["Title"] = "Kullanıcı Kaldır";
}

<h1>Kullanıcı Kaldır</h1>

<h3>Bu kullancıyı kaldırmak istediğinizden emin misiniz?</h3>
<div>
    
    <hr />
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-5">
            <dl>

                <dt class="col-sm-5">
                    @Html.DisplayNameFor(model => model.UserName)
                </dt>
                <dd class="col-sm-5">
                    @Html.DisplayFor(model => model.UserName)
                </dd>
                <dt class="col-sm-5">
                    @Html.DisplayNameFor(model => model.Password)
                </dt>
                <dd class="col-sm-5">
                    @Html.DisplayFor(model => model.Password)
                </dd>
                <dt class="col-sm-5">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-sm-5">
                    @Html.DisplayFor(model => model.Email)
                </dd>
                <dt class="col-sm-5">
                    @Html.DisplayNameFor(model => model.FirstName)
                </dt>
                <dd class="col-sm-5">
                    @Html.DisplayFor(model => model.FirstName)
                </dd>
                <dt class="col-sm-5">
                    @Html.DisplayNameFor(model => model.LastName)
                </dt>
                <dd class="col-sm-5">
                    @Html.DisplayFor(model => model.LastName)
                </dd>
                <dt class="col-sm-5">
                    @Html.DisplayNameFor(model => model.IsAdmin)
                </dt>
                <dd class="col-sm-5">
                    @Html.DisplayFor(model => model.IsAdmin)
                </dd>
                <dt class="col-sm-5">
                    @Html.DisplayNameFor(model => model.IsActive)
                </dt>
                <dd class="col-sm-5">
                    @Html.DisplayFor(model => model.IsActive)
                </dd>
                <dt class="col-sm-5">
                    @Html.DisplayNameFor(model => model.CreatedDate)
                </dt>
                <dd class="col-sm-5">
                    @Html.DisplayFor(model => model.CreatedDate)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Kullanıcıyı Kaldır" class="btn btn-danger" />
                <a class="btn btn-secondary" asp-action="Index">Listeye Dön</a>
            </form>
        </div>
        <div class="col-md-5 text-muted"><img src="~/kurumsal-logo.jpg" /></div>
        <div class="col-md-1"></div>
    </div>

</div>
