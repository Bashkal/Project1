@model IEnumerable<DenerMakine.Entities.Guide>

@{
    ViewData["Title"] = "Kılavuzlar";
}

<h1>Kılavuzlar</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Yeni Kılvauz Ekle</a>
</p>


<main>
    <div class="container-fluid px-4">
        <div class="card">
            <div class="card-header">
                <i class="fas fa-table"></i>
                Kılavuz Listesi
            </div>

            <div class="card-body">
                <table class="table" id="datatablesSimple">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.Image)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.File)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.UpdatedDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Department)
                            </th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>

                                <td>
                                    <img src="@Html.DisplayFor(modelItem => item.Image)" style="max-height:40px" alt="">

                                </td>
                                <td>
                                    <a asp-action="FileDown" asp-route-id="@item.Id"><i class="fas fa-download btn btn-secondary"></i></a>
                                    @if (item.FileType == ".pdf" || item.FileType == ".png" || item.FileType == ".jpeg" || item.FileType == ".jpg" || item.FileType == ".mp4")
                                    {
                                        <a target="_blank" href="@Html.DisplayFor(modelItem => item.File)"><i class="fas fa-file btn btn-primary"></i></a>
                                    }

                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UpdatedDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Department.Name)
                                </td>
                                <td>
                                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-edit"></i></a>
                                    <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-circle-info"></i></a>
                                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</main>




