@{
    ViewData["Title"] = "KYGS";
}
<!-- Page content-->
<!-- Blog entries-->
<div>
    <!-- Featured blog post-->
    @* Kullanım kılavuzu vb. genel kullanım amaçlı dosyalara ayrılmış alan eğer model "Genelé isimli departmana göre filtelenir ve son yüklenirse değişiklikler yapıldığında yeni değişkiklikler duyurulabilir *@
    <div class="card mb-4">

        <div class="card-body container">
            @* Bu alana kullanım kılavuzunun dosya yolu eklenir ise yeni sayfada açar *@
            <a target="_blank" href="@* dosya yolu*@">
                <img style="width:100%" src="~/gemini_generated_image_ait3qyait3qyait3.png" />
            </a>
            <h2 class="card-title">Dener Makina KYGS Kullanım Kılavuzu</h2>
            <p class="card-text">Dener Makina Kılavuz Yükleme ve Görüntüleme Sistemi Kullanım Kılavuzu. Aracın nasıl kullanılacağı ve özellikleri hakkında bilgi verir. Yükleme ve Görüntüleme işlermlerini açıklar. </p>
            @* Bu alana kullanım kılavuzunun dosya yolu eklenir ise indirir *@
            <a class="btn btn-primary" href="FileDown/~~~~~~~">İndir</a>
        </div>
    </div>
    <!-- Nested row for non-featured blog posts-->
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-6 flex-lg-wrap">
                <!-- Blog post-->
                <div class="card mb-4 bg-dark">
                    <a asp-controller="Guides" asp-action="Details" asp-route-Id="@item.Id"><img class="card-img-top" src="~/titte-dener.jpg" alt="..."  /></a>
                    <div class="card-body text-light">
                        <div class="small text-muted">@item.CreatedDate</div>
                        <div class="small text-muted">@item.Department.Name</div>

                        <h2 class="card-title h4">@item.Name</h2>
                        <p class="card-text">@item.Description</p>
                        <a class="btn btn-primary" href="FileDown/@item.Id">İndir</a>
                        <a target="_blank" class="btn btn-warning" href="@item.File">İncele</a>
                        
                    </div>
                </div>
                <!-- Blog post-->

            </div>
        }
    </div>
