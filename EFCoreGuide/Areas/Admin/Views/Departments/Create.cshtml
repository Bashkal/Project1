@model EFCoreGuide.Models.Department

@{
    ViewData["Title"] = "Departmanlar";
}

<h1>Departman Ekle</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Departman Adı</label>
                <br />
                <input asp-for="Name" class="form-control" />
                <br />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Deparmanı Ekle" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div>
        <br />
        <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
