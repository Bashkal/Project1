
@{
    ViewBag.Title = "Session ve Cookie Kukllanımı";
}

<h2>Session ve Cookie Kukllanımı</h2>

@using (Html.BeginForm())
{
    <h4>Creating Session</h4>
    @Html.TextBox("text", "Session")
    <input id="Submit1" type="submit" value="Session oluştur" />
    @ViewBag.SessionValue;
}
@using (Html.BeginForm("Cookie", "Mvc11SessionCookie"))
{
    <h4>Creating Cookie</h4>
    @Html.TextBox("cookie", "Cookie")
    <input id="Submit1" type="submit" value="Cookie oluştur" ,name="cookie" />
    @ViewBag.SessionValue;
}
@{if (ViewBag.Kullanici != null)
    {
        @ViewBag.Kullanici;
    }
    else
    {
        <h2>there is no cookie</h2>
    }
}
@using (Html.BeginForm("CookieDelete", "Mvc11SessionCookie"))
{
    <h3>Cookie silme</h3>
    <input id="Submit1" type="submit" value="Cookie Sil" />


}